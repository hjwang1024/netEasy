root = true

[*]
# 缩进风格，可选配置有 tab 和 space
indent_style = space 

# 缩进大小，可设定为 1-8 的数字
indent_size = 4

# 换行符，可选配置有 lf ，cr ，crlf ，许多有名的开源库都是使用 lf 
end_of_line = lf

# 编码格式，通常都是选 utf-8
charset = utf-8

# 去除多余的空格，比如你不小心在尾巴多打了个空格，它会给你自动去掉。
trim_trailing_whitespace = true

# 在尾部插入一行
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
